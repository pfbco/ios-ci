# For more information about this configuration visit
# https://docs.fastlane.tools/actions/scan/#scanfile

# In general, you can use the options available
# fastlane scan --help

# Clean up the project before building it
clean(false)

# Enable skip_build to skip debug builds for faster test performance
skip_build(true)

# Devices
devices(["iPhone 8", "iPhone 11"])

# Test results formats
output_types("junit,html")

# Terminate Simulator processes before the test run
force_quit_simulator(true)

# Automatically erase the simulator before running the application
reset_simulator(true)

# Preload the first simulator prior to calling any xcodebuild command
prelaunch_simulator(false)

# Output the simulator logs
include_simulator_logs(false)

# Enable code coverage (Xcode 7 and up)
code_coverage(true)
